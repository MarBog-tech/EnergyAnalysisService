@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EnergyAnalysisService.Models.ViewModels.PaymentSlipVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    How long you use this appliance per day?
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="PaymentSlip.DeviceId" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="mb-3 row p-1">
                            <label asp-for="DeviceName" class="p-0">@Model.DeviceName</label>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Hours" class="p-0 text-muted"></label>
                            <input asp-for="Hours" class="form-control"/>
                            <span asp-validation-for="Hours" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Minutes" class="p-0 text-muted"></label>
                            <input asp-for="Minutes" class="form-control"/>
                            <span asp-validation-for="Minutes" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="PaymentSlip" asp-action="IndexPaymentSlip" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
      tinymce.init({
                  selector: 'textarea',
                  plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
                  toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
              });
    </script>
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

